{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "allowJs": false,
    "checkJs": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
